<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_sm"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/ic_launcher" />

        <com.example.mymusicplayer.MarqueTextView
            android:id="@+id/music_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:ellipsize="marquee"

            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"

            android:singleLine="true"
            android:text="name1d74awd6e468fg6sr456g456a46fgds46fa"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_pause_small"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_baseline_pause_circle_outline_24_small" />

        <ImageButton
            android:id="@+id/btn_next_small"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_baseline_skip_next_24_small" />

    </LinearLayout>

</RelativeLayout>