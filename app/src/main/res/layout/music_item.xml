<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_music"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="3dp">

    <TextView
        android:id="@+id/item_position"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="1"
        android:textSize="16sp" />

    <com.example.mymusicplayer.bean.RoundImageView
        android:id="@+id/item_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/icon_big_logo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <com.example.mymusicplayer.MarqueTextView
            android:id="@+id/item_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="歌曲名"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <com.example.mymusicplayer.MarqueTextView
                android:id="@+id/item_singer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="歌手"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/duration_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="时间"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>