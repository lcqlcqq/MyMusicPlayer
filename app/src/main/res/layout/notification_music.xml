<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navi_music"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_navi"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@mipmap/icon_notification_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/music_name_navi"
            android:layout_width="160dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:ellipsize="marquee"

            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"

            android:text="未在播放"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/music_singer_navi"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"

            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"

            android:text="群星"
            android:textSize="13sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/btn_prev_navi"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_baseline_skip_previous_24_small_black" />
    <ImageView
        android:id="@+id/btn_pause_navi"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:id="@+id/btn_next_navi"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_baseline_skip_next_24_small_black" />

</LinearLayout>